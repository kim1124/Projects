<body>
  <div>
    <h1>PTY Terminal</h1>
    <p>Welcom to Ptyterminal</p>
    <hr>
    <div id="terminal"></div>
  </div>
  <!-- 페이지 렌더링 성능을 올리기 위한 동적 스크립트 삽입 -->
  <script>
    (function(){

      // 자바스크립트 템플릿 동적 로드 함수

      function asyncJsTemplate(){

        var dom_script = document.createElement('script');

        dom_script.type = 'text/javascript';
        dom_script.async = true;
        dom_script.src = '/javascripts/webterminal.js';

        document.head.appendChild(dom_script);

      }

      // 인터넷 익스폴러 혹은 그외의 브라우저에서 이벤트 연결

      window.attachEvent ? window.attachEvent('onload', asyncJsTemplate) : window.addEventListener('load', asyncJsTemplate, false);

    })();
  </script>
</body>
